# Database
DATABASE_URL="postgresql://username:password@localhost:5432/memecoin_trading"

# Server Configuration
NODE_ENV="development"
PORT=3000
API_BASE_URL="http://localhost:3000"

# Security
JWT_SECRET="your-super-secret-jwt-key-here"
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External API Keys
DEXSCREENER_API_KEY="your-dexscreener-api-key"
GMGN_API_KEY="your-gmgn-api-key"
GECKOTERMINAL_API_KEY="your-geckoterminal-api-key"
SOLSCAN_API_KEY="your-solscan-api-key"

# Redis Configuration (for Bull Queue)
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# WebSocket Configuration
WS_PORT=3001

# Logging
LOG_LEVEL="info"
LOG_FILE_PATH="./logs/app.log"

# Token Detection Settings
TOKEN_SCAN_INTERVAL_MS=30000
MAX_TOKENS_PER_SCAN=100
SAFETY_SCORE_THRESHOLD=7.0
VOLUME_THRESHOLD_USD=10000
MARKET_CAP_MIN_USD=50000
MARKET_CAP_MAX_USD=10000000

# Trading Configuration
MAX_POSITION_SIZE_USD=1000
STOP_LOSS_PERCENTAGE=0.15
TAKE_PROFIT_PERCENTAGE=0.30
MAX_CONCURRENT_TRADES=5