# Test Environment Configuration
# This file contains environment variables for testing

# Node Environment
NODE_ENV=test
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://test:test@localhost:5432/memecoin_test
REDIS_URL=redis://localhost:6379/1

# API Configuration - Mock endpoints for testing
DEXSCREENER_BASE_URL=http://localhost:3001/mock/dexscreener
RUGCHECK_BASE_URL=http://localhost:3001/mock/rugcheck
JUPITER_BASE_URL=http://localhost:3001/mock/jupiter
SOLSCAN_BASE_URL=http://localhost:3001/mock/solscan
GMGN_BASE_URL=http://localhost:3001/mock/gmgn
GECKO_TERMINAL_BASE_URL=http://localhost:3001/mock/gecko

# Rate Limiting (Relaxed for testing)
API_RATE_LIMIT_REQUESTS=1000
API_RATE_LIMIT_WINDOW=60000

# WebSocket Configuration
WS_PORT=3002
WS_HEARTBEAT_INTERVAL=30000

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./logs/test.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Security (Test keys - DO NOT USE IN PRODUCTION)
JWT_SECRET=test-jwt-secret-key-for-testing-only-do-not-use-in-production
JWT_EXPIRY=24h
BCRYPT_ROUNDS=4

# Feature Flags
ENABLE_SAFETY_ANALYSIS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ALERTS=true
ENABLE_METRICS_COLLECTION=true
ENABLE_CACHING=true

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_ITEMS=1000

# Alert Configuration
ALERT_WEBHOOK_URL=http://localhost:3001/mock/webhook
ALERT_EMAIL_FROM=test@example.com
ALERT_EMAIL_TO=alerts@example.com

# Performance Settings
WORKER_POOL_SIZE=2
BATCH_SIZE=50
MAX_CONCURRENT_REQUESTS=10

# Safety Analysis Thresholds
RISK_SCORE_THRESHOLD=75
LIQUIDITY_THRESHOLD=10000
VOLUME_THRESHOLD=50000
HOLDER_COUNT_THRESHOLD=100

# Mock API Response Delays (milliseconds)
MOCK_API_DELAY_MIN=100
MOCK_API_DELAY_MAX=500

# Test Database Settings
TEST_DB_POOL_SIZE=5
TEST_DB_TIMEOUT=30000

# Monitoring
HEALTH_CHECK_INTERVAL=10000
METRICS_PORT=9090

# External Service Timeouts
API_TIMEOUT=10000
DB_TIMEOUT=5000
REDIS_TIMEOUT=3000