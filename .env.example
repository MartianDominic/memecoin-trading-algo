# =============================================================================
# MEMECOIN TRADING ALGORITHM - ENVIRONMENT CONFIGURATION EXAMPLE
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# NODE ENVIRONMENT
# =============================================================================
NODE_ENV=development
PORT=3000
API_PORT=3001
WEBSOCKET_PORT=8080

# =============================================================================
# POSTGRESQL DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=memecoin_trading
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here

DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/memecoin_trading?schema=public

# =============================================================================
# REDIS CACHE CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_KEY_PREFIX=memecoin_trading:

# =============================================================================
# API PROVIDER CONFIGURATION
# =============================================================================
DEXSCREENER_API_URL=https://api.dexscreener.com/latest
GMGN_API_URL=https://gmgn.ai/defi/quotation/v1
GECKOTERMINAL_API_URL=https://api.geckoterminal.com/api/v2
JUPITER_API_URL=https://quote-api.jup.ag/v6

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_RPC_WEBSOCKET=wss://api.mainnet-beta.solana.com/

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
JWT_SECRET=your_super_secure_jwt_secret_here_make_it_long_and_random
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
MAX_POSITION_SIZE=1000
MIN_SAFETY_SCORE=6.0
MIN_LIQUIDITY_USD=50000

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================
# DISCORD_WEBHOOK_URL=
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_CHAT_ID=